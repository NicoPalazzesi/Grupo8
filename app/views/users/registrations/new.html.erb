<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div>
        <%= f.label :nombre %><br />
        <%= f.text_field :nombre, autofocus: true, required: true, placeholder: "Ingrese un Nombre"  %>
  </div>

  <div>
        <%= f.label :apellido %><br />
        <%= f.text_field :apellido, autofocus: true, required: true, placeholder: "Ingrese un Apellido" %>
  </div>

  <div>
        <%= f.label :fecha %><br />
        <%= f.date_select :fecha, autofocus: true, start_year:1940, end_year:2016, required: true, placeholder: "Ingrese una Fecha" %>
  </div>  

  <div>
        <%= f.label :telefono %><br />
        <%= f.integer :telefono, autofocus: true, required: true, placeholder: "Ingrese un Telefono" %>
  </div>



  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true, placeholder: "Ingrese un nombre" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", required: true, placeholder: "Ingrese una ContraseÃ±a" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true, placeholder: "Confirme su ContraseÃ±a" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>